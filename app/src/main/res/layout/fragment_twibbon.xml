<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextureView
        android:id="@+id/camera_preview"
        android:layout_width="308dp"
        android:layout_height="287dp"
        android:layout_marginTop="132dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/take_photo_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/twibbon"
        android:layout_width="308dp"
        android:layout_height="287dp"
        android:layout_marginTop="132dp"
        android:layout_weight="1"
        android:contentDescription="@string/title_twibbon"
        android:src="@drawable/twibbon"
        app:layout_constraintBottom_toTopOf="@+id/take_photo_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/take_photo_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/photo"
        app:layout_constraintEnd_toEndOf="@+id/camera_preview"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/camera_preview"
        app:layout_constraintTop_toBottomOf="@+id/camera_preview" />


</androidx.constraintlayout.widget.ConstraintLayout>
